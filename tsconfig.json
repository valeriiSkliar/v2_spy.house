{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"],
      "@img/*": ["resources/img/*"],
      "@pages/*": ["resources/js/pages/*"],
      "@scss/*": ["resources/scss/*"],
      "@creatives/*": ["resources/js/creatives/*"]
    },

    /* Types */
    "types": ["vite/client", "node", "jquery"],

    /* Vue 3 support */
    "jsx": "preserve",
    "jsxImportSource": "vue"
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.js",
    "resources/js/**/*.vue",
    "vite.config.js"
  ],
  "exclude": ["node_modules", "public", "storage", "vendor"]
}
